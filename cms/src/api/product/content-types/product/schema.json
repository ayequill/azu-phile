{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "isNew": {
      "type": "boolean"
    },
    "price": {
      "type": "integer"
    },
    "description": {
      "type": "text"
    },
    "features": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "component",
      "component": "product.gallery",
      "repeatable": true
    },
    "category": {
      "type": "component",
      "component": "product.catefory",
      "repeatable": false
    },
    "includes": {
      "type": "component",
      "component": "product.includes",
      "repeatable": true
    }
  }
}
